<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="100" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="313dp"
        android:layout_weight="80.77">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="contact@ghec.co.in"
                android:layout_width="match_parent"
                android:layout_height="45dp">
            </TextView>
            <TextView android:text="Subject"
                android:layout_width="281dp"
                android:layout_height="24dp">
            </TextView>
            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Subject" />
            <TextView android:text="Message"
                android:layout_width="211dp"
                android:layout_height="30dp">
            </TextView>
            <EditText
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                android:ems="10"
                android:hint="Message body" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <Button
            android:id="@+id/sendEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Compose an email" />
    </LinearLayout>

</LinearLayout>